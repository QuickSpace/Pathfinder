<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/handleMaps"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="10dp"
        android:divider="#ffbf0080"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false"
        android:listSelector="#ff0090" >
    </ListView>

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handleMaps"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/startPtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/oval" />

        <ImageView
            android:id="@+id/targetPtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/oval" />

        <ImageView
            android:id="@+id/pathPtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/oval" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoLayout"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/enter_map_name" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/exit" />
        
        <Button
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/info" />
        
        <Button
            android:id="@+id/execute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/execute" />

    </LinearLayout>

</RelativeLayout>
